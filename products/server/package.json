{
  "name": "@pnpm-poc/server",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "nx": {
    "name": "server",
    "projectType": "application",
    "sourceRoot": "products/server/src",
    "targets": {
      "serve": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "server:build:development"
          },
          "production": {
            "buildTarget": "server:build:production"
          }
        }
      },
      "docker-build": {
        "dependsOn": [
          "build"
        ],
        "command": "docker build -f products/server/Dockerfile . -t server"
      },
      "docker-run": {
        "command": "docker run -p 3333:3333 -e API_MESSAGE=Hello_World server"
      }
    }
  }
}
